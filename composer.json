{
    "name": "promopult/integra-client",
    "description": "Promopult Integra API v1 client library",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "unlicense",
    "require": {
        "php": ">=7.2",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-intl": "*",
        "psr/http-message": "*",
        "psr/http-client": "*",
        "php-http/guzzle6-adapter": "~2.0.0",
        "guzzlehttp/guzzle": "~6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0.0",
        "squizlabs/php_codesniffer": "^2.3.0"
    },
    "authors": [
        {
            "name": "Dmitry Gladyshev",
            "email": "dgladyshev@promopult.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Promopult\\Integra\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Promopult\\Integra\\Tests\\": [
                "tests/"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
